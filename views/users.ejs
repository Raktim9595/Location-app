<%- include("./partials/header") %>

  <div class="container">
    <div class="container-fluid">
      <h3 class="text-center">Welcome <%= user.firstname %> <%= user.lastname %></h3>
      <div class="user__info mt-4">
        <div class="row">
          <div class="col-12 col-md-5">
            <div class="card pb-2">
              <div class="user__avatar mt-2">
                <img src="<%=  avatar %>" alt="<%= user.username %>" >
              </div>
              <p class="user__username"><%= user.username %></p>
              <div class="info__sub-content">
                <span class="sub-title">firstname: </span>
                <span class="sub-name"><%= user.firstname %></span>
              </div>
              <div class="info__sub-content">
                <span class="sub-title">lastname: </span>
                <span class="sub-name"><%= user.lastname %></span>
              </div>
              <div class="info__sub-content">
                <span class="sub-title">email: </span>
                <span class="sub-name"><%= user.email %></span>
              </div>
              <div class="btn-group-style mb-3">
                <a href="/campgrounds/" class="btn btn-info">Add More info</a>
                <button class="btn btn-danger" data-bs-toggle="modal"
                    data-bs-target="#deleteCampground">Delete</button>
                <div class="modal fade" id="deleteCampground" tabindex="-1"
                    aria-labelledby="campgroundDelteHeader" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="campgroundDelteHeader">Delete <%= user.username %>
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this user</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Close</button>
                                <form action="/users/<%= user.username %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
          </div>
          <div class="col-12 offset-md-1 col-md-6">
            <div class="card" style="text-align: center; padding: 8px;">
              <h3>Your all Locations goes here</h3>
              <% foundCampground.forEach(campground => { %>
                <div class="card mb-3 user__card-container">
                  <div class="row">
                      <div class="col-xl-4">
                          <img src="<%= campground.images[0].thumbnail %>" alt="<%= campground.name %>" class="img-fluid user__campground-img">
                      </div>
                      <div class="col-xl-8" style="text-align: start;">
                          <div class="card-body">
                              <h4 class="card-title">
                                  <a href="/campgrounds/<%= campground._id %>" class="text-decoration-none">
                                      <h3><%= campground.name %>:</h3>
                                  </a>
                              </h4>
                              <p class="card-text">
                                  <p class="card-text"><%- campground.description.substring(0,100) %>....</p>
                              </p>
                          </div>
                      </div>
                  </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("./partials/footer") %>